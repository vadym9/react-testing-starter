{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "esnext",
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "removeComments": true,
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "@types"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
